{
  "manifest_version": 2,
  "name": "Stress Control",
  "version": "1.0",
  "description": "Manage persistent stress with Web Workers in a detached window.",
  "permissions": ["activeTab"],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_title": "Stress Control"
  }
}
